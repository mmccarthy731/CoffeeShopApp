@{
    ViewBag.Title = "UserRegistration";
}

<script type="text/javascript">
    function validatepwd() {
        if (document.getElementById('password2').value != document.getElementById('password').value) {
            document.getElementById('errorMessage').innerHTML = "Passwords must match!"
            return false;
        }
        return true;
    }
</script>

<h2 id="head">Returning user? Sign in!</h2>

<form action="/Home/SignIn" method="post">
    <div class="form-group">
        <label for="Email">Email:</label>
        <input type="email" class="form-control" name="Email" id="signinemail" required>
    </div>
    <div class="form-group">
        <label for="Password">Password:</label>
        <input type="password" class="form-control" name="Password" id="signinpassword" required>
    </div>
    <button  class="btn btn-default" type="submit">Sign In</button><br />
    <p id="error">@ViewBag.SignInError</p>
</form><br />

<h3 id="head">New User? Register!</h3>

@model CoffeeShopApp.Models.User
<form action="/Home/RegisterNewUser" method="post">
    <div class="form-group">
        <label for="FirstName">First Name:</label>
        <input type="text" class="form-control" name="FirstName" id="firstName" pattern="^[A-Za-z.'-]{1,}$" title="Enter a valid name." required>
    </div>
    <div class="form-group">
        <label for="LastName">Last Name:</label>
        <input type="text" class="form-control" name="LastName" id="lastName" pattern="^[A-Za-z.'-]{1,}$" title="Enter a valid name." required>
    </div>
    <div class="form-group">
         <label for="Email">Email Address:</label>
         <input type="email" class="form-control" name="Email" id="email" required>
     </div>
    <div class="form-group">
        <label for="PhoneNumber">Phone Number:</label>
        <input type="text" class="form-control" name="PhoneNumber" id="phoneNumber" pattern="^[0-9]{3}-[0-9]{3}-[0-9]{4}$" title="123-456-7890" maxlength="12" required>
    </div>
     <div class="form-group">
         <label for="Password">Password:</label>
         <input type="password" class="form-control" name="Password" id="password" pattern="^(?=.*[0-9])(?=.*[a-zA-Z])[\S]{8,20}$" title="Must be 8-20 characters long and contain at least one number." required>
     </div>
    <div class="form-group">
        <label>Re-enter Password:</label>
        <input type="password" class="form-control" name="Password2" id="password2" required>
        <p id="errorMessage"></p>
    </div>
    <div class="form-group">
        <input type="checkbox" required> I am not a robot.<br>
    </div>
    <button class="btn btn-default" type="submit" onclick="return validatepwd()">Register</button><br />
    <p id="error">@ViewBag.RegistrationError</p>
</form>

