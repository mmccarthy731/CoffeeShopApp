
@{
    ViewBag.Title = "AddItemForm";
}

@model CoffeeShopApp.Models.Item
<h2 id="head">Add Item Form</h2>

<form action="/Home/AddNewItem" method="post">
    <div class="form-group">
        <label for="Name">Product Name:</label>
        <input type="text" class="form-control" name="Name" id="name" required />
    </div>
    <div class="form-group">
        <label for="Description">Description:</label>
        <input type="text" class="form-control" name="Description" id="description" required />
    </div>
    <div class="form-group">
        <label for="Quantity">Stock Quantity:</label>
        <input type="text" class="form-control" name="Quantity" id="quantity" pattern="^[0-9]{1,}$" title="Quantity must be an integer value." required />
    </div>
    <div class="form-group">
        <label for="Price">Price:</label>
        <input type="text" class="form-control" name="Price" id="price" pattern="^[0-9.]{1,}$" title="Price must be an integer or decimal value." required />
    </div><br />
    <button class="btn btn-default" type="submit">Add Item</button>
</form>